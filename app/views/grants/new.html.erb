<%= form_for @grant do |f| %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: 'Name of Grant', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :sector, placeholder: 'category', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :description, placeholder: 'Description', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :region, placeholder: 'Enter region', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :visibility, placeholder: 'Public or Private', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>