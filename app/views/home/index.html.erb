<div class="home-page">
  <h1 class="main-title text-center">List of Grants</h1>

   <div class="container">
    <div class="row">

    <% @grants.each do |grant| %>
      <div class="col-sm-4">
        <div class="card">    
          <div class="card-body text-center">
            <h4 class="card-title"><%= grant.name %></h4>
            <hr>
            <p class="card-description card-text"><%= grant.description %></p>
            <p class="card-sector"><%= grant.sector %> | <%= grant.visibility %></p>
            <p class="card-region"><%= grant.region %></p>
          </div><!--end card content -->
          
          <div class="card-action">
            <a href="#">Add Comment</a>
          </div><!-- end of card action -->
          </div>
        </div><!-- end of card -->
        <% end %>
        <!-- next card -->
      </div><!-- end of col -->

    </div>
   </div><!-- container -->


  </div><!-- end of home-page -->


  